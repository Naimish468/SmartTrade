@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewBag.Message</h1>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Popular Stocks</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Company</th>
                                <th>Symbol</th>
                                <th>Price</th>
                                <th>Change (%)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewData["Stocks"] is List<Stock> stocks && stocks.Any())
                            {
                                foreach (var stock in stocks)
                                {
                                    <tr>
                                        <td>@stock.CompanyName</td>
                                        <td><a asp-action="Welcome" asp-controller="Home" asp-route-symbol="@stock.Symbol">@stock.Symbol</a></td>
                                        <td>â‚¹@stock.CurrentPrice.ToString("N2")</td>
                                        <td class="@(stock.ChangePercent >= 0 ? "text-success" : "text-danger")">
                                            @(stock.ChangePercent >= 0 ? "+" : "")@stock.ChangePercent.ToString("F2")%
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>